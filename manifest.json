{
    "manifest_version": 3,
    "name": "Robots.txt & Sitemaps.xml Viewer",
    "version": "1.2",
    "description": "Affiche le contenu des fichiers robots.txt et sitemap.xml d'un site web",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  